<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_card"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            android:layout_margin="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/icd_cmpimg_layout"
            android:layout_width="74dp"
            android:layout_height="74dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/icd_cmpimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView

            android:textColor="#000000"
            android:textSize="14sp"
            android:text="Business Development (Sales)"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpname"

            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView

            android:textColor="#808080"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpsubname"

            android:text="Oyo"
            android:textSize="16sp"
            android:layout_below="@+id/icd_cmpname"
            android:layout_toEndOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/greyline"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/icd_cmpsubname"
            android:layout_toEndOf="@+id/icd_cmpimg_layout"
            android:background="#808080"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@+id/greyline"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView

                    android:textSize="10sp"
                    android:id="@+id/icd_location"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:text="Delhi"
                    android:drawableLeft="@drawable/ic_location_interncard_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView

                    android:textSize="10sp"
                    android:id="@+id/icd_amount"

                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1000 - 1200"
                    android:drawableLeft="@drawable/ic_attach_money_interncard_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView

                    android:textSize="10sp"
                    android:id="@+id/icd_duration"

                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="2 months"
                    android:drawableStart="@drawable/ic_date_range_interncard_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>