<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView

        android:textColor="#6C6666"
        android:textSize="20sp"

        android:text="Contact us"
        android:fontFamily="@font/montserrat"
        android:layout_above="@id/layout_card"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_card"
        app:cardElevation="6dp"
        android:layout_margin="12dp"
android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
android:layout_margin="12dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Harshit Agrawal"
            android:fontFamily="@font/montserrat"
            android:id="@+id/name"
android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:text="+91 82727084770"
        android:drawableStart="@drawable/ic_phone"
        android:fontFamily="@font/montserrat"
        android:id="@+id/number"

        android:drawablePadding="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_mail"
        android:text="ceo@socialdukan.com"
        android:fontFamily="@font/montserrat"
        android:id="@+id/email1"
        android:drawablePadding="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#000000"
        android:textSize="14sp"
        android:text="General Queries"
        android:fontFamily="@font/montserrat"

        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_mail"
        android:text="socialdukan@gmail.com"
        android:fontFamily="@font/montserrat"
        android:id="@+id/email2"
        android:drawablePadding="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#000000"
        android:textSize="14sp"
        android:text="Support"
        android:fontFamily="@font/montserrat"

        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_mail"
        android:text="info@socialdukan.com"
        android:fontFamily="@font/montserrat"
        android:id="@+id/email3"
        android:drawablePadding="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>