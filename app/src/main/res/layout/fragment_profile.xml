<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:layout_height="340dp"
        android:background="@drawable/bg_profile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/montserrat"
        android:textSize="28sp"
        android:textStyle="bold"
        android:id="@+id/profile"
        android:textColor="@color/white"
     android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
android:layout_marginTop="120dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/image_user"
        android:src="@drawable/ic_pencil" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/user"
        android:id="@+id/image_user"
        android:layout_width="100dp"
        android:layout_below="@id/profile"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:padding="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ritik Mehta"
        android:textSize="16sp"
        android:id="@+id/name_user"
        android:textColor="@color/white"
        android:layout_below="@id/image_user"
       android:layout_centerHorizontal="true"

        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi"
        android:textSize="16sp"

        android:id="@+id/user_loc"
        android:drawableStart="@drawable/ic_location_interncard_24dp"
        android:drawablePadding="4dp"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_below="@id/name_user"
        android:layout_centerHorizontal="true"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rithikmehta@gmail.com"
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/user_email"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_below="@id/user_loc"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>

  </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_profile"

        android:layout_height="400dp">
        <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
android:id="@+id/card_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/pers_detail1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="12dp"
android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:text="Personal Details"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:id="@+id/card2"
android:layout_below="@+id/card_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardElevation="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/pers_detail2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="12dp"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_ed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:text="Education Details"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
android:layout_below="@id/card2"
            android:id="@+id/card3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardElevation="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/pers_detail3"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="12dp"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:text="Work and Experience"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
android:layout_below="@+id/card3"
            android:id="@+id/card4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardElevation="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/pers_detail4"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="12dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_abili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:text="Abilities"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/lightpurple"

           android:layout_centerHorizontal="true"
            app:cardElevation="6dp">


            <RelativeLayout
                android:layout_width="match_parent"
android:id="@+id/layout_signout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="12dp"
                    android:textColor="@color/white"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:text="Sign out"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
    </ScrollView>
</FrameLayout>