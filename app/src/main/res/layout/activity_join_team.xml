<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Enter Team Details"
                        android:textAlignment="center"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/team_name"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Team Name"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member1"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Your Name(Leader)"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member2"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 2"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member3"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member4"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 4"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member5"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 5"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member6"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 6"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member7"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member8"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 8"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member9"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 9"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColorHint="@color/gray"
                        android:id="@+id/member10"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:hint="Member 10"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/next_btn"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   next   "
                        android:textColor="#000"
                        android:textSize="20sp"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>