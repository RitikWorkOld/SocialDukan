<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_check"
    tools:context="com.social.socialdukan.Student.fragment.other_services.Card1_Form">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView

        android:textStyle="bold"
        android:id="@+id/title"

       android:textColor="@color/purple"
        android:padding="8dp"

android:text="Form"

        android:textSize="32sp"
    android:gravity="center"
        android:layout_margin="16dp"

        android:layout_marginTop="24dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
   <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/evnt_name"
       app:counterTextColor="@color/white"
       android:textColorHint="@color/white"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        >

      <com.google.android.material.textfield.TextInputEditText

          android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/name_et"
          android:textColor="@color/white"
          android:padding="8dp"
          android:background="@drawable/edittext"
          android:layout_margin="16dp"
            android:hint="Event's Name" />
   </com.google.android.material.textfield.TextInputLayout>


       <EditText
android:id="@+id/evnt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
           android:textColorHint="@color/white"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Event's Date" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/evnt_venue"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:id="@+id/venut_et"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Event's Venue" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:id="@+id/city_et"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="City" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/exp_football"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:id="@+id/exp_et"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Expected Football" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/head_name"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:id="@+id/head_name_et"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Head's Name" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/head_cont"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:inputType="number"
            android:id="@+id/number"

            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Head's Contact Number" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/head_email"
        app:counterTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:id="@+id/email_et"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
            android:hint="Head's Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
    <Button
        android:layout_width="144dp"
        android:background="@drawable/btn_gradient_style"
        android:textColor="@color/white"
     android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:id="@+id/submit_btn"
        android:text="Submit"/>
    </RelativeLayout>
</LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>