<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.fragment.profile.aboutus.about_us">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"

            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card1"
            android:layout_margin="20dp"
            android:elevation="8dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
          android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#808080"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="@string/About_us"

                />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
           android:layout_marginTop="8dp"
            android:layout_margin="4dp"
            android:id="@+id/lay1"
            android:layout_centerInParent="true"
            android:layout_below="@id/card1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"

                android:src="@drawable/oneee"/>
            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"

                android:src="@drawable/twooo"/>
            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"

                android:src="@drawable/threeee"/>
            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"

                android:src="@drawable/fourrr"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/lay1"
            android:id="@+id/frame1"
            android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager

            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="35dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingStart="35dp"
            android:layout_marginBottom="60dp"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:textColor="@color/purple"
            android:layout_below="@id/frame1"
            android:text="See What Our Customers Say About Us"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@id/text"
    android:id="@+id/lay2"
    android:layout_height="match_parent">

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerv_view"
 />
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text2"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_below="@id/lay2"
            android:layout_margin="4dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"

            android:text="Our Valued Clients"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/text2"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/recyclerv_view1"
            />
        </LinearLayout>


    </RelativeLayout>
    </ScrollView>

</RelativeLayout>