<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Student.fragment.Internship.InternFragment">


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/intern_layout"
            android:orientation="vertical"
            android:background="@drawable/btn_grd_style"
            android:layout_height="200dp">
            <ImageView
                android:elevation="6dp"
                android:id="@+id/iv_notification_btn"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_notifications_blackone_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internships"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="28sp"
               android:layout_centerInParent="true"
                />




        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_internall"
android:layout_below="@id/intern_layout"
            android:background="@drawable/btn_grd_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</FrameLayout>