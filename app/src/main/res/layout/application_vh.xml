<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_card"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/icd_cmpimg_layout"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/icd_cmpimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Market Expansion for Oyo"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpname"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:maxLines="1"
            android:textColor="#808080"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpsubname"
            android:layout_marginRight="15dp"
            android:text="Oyo"
            android:textSize="22sp"
            android:layout_below="@+id/icd_cmpname"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>