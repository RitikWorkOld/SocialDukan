<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student.fragment.other_services.Other_Services">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_notification_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:elevation="6dp"
            android:layout_gravity="end"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_notifications_black_24dp" />

        <ImageView
            android:id="@+id/notificationbadge"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_notification_btn"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_notification_btn"
            android:elevation="10dp"
            android:src="@drawable/badge_notifications" />
    </RelativeLayout>



    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:orientation="vertical"
      app:cardCornerRadius="10dp"
      android:id="@+id/card_main"
      android:elevation="8dp"

      android:layout_marginRight="12dp"
      android:layout_marginLeft="12dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      app:cardElevation="6dp">
      <LinearLayout
          android:weightSum="2"

          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">

          <RelativeLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:fontFamily="@font/nunito"
              android:paddingHorizontal="20dp"
              android:paddingVertical="12dp">

              <LinearLayout

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:orientation="vertical"
                  android:weightSum="3">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:fontFamily="@font/montserrat"
                      android:textColor="#000"
                      android:text="Fetch Sponsorships"
                      android:textSize="18sp" />





              </LinearLayout>

              <ImageView
                  android:src="@drawable/spons"
                 android:scaleType="centerCrop"
                  android:layout_width="114dp"
                  android:layout_height="114dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:padding="2dp"/>
          </RelativeLayout>
      </LinearLayout>
  </androidx.cardview.widget.CardView>
