<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_check"
    tools:context=".Student.fragment.other_services.Card5_Form">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/upper"
android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main"
        android:elevation="8dp"

        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >



                <LinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/lay1"
    android:orientation="vertical"
    android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/shirt"

                    android:id="@+id/image_sponsor"
                    android:layout_width="114dp"
                    android:layout_height="114dp"
                    android:padding="16dp"/>
             <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
                <TextView
android:id="@+id/card1_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="T-shirt"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
             android:textSize="18sp"

                 />
             </RelativeLayout>
</LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main2"
        android:elevation="8dp"
android:layout_toRightOf="@+id/card_main"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lay2"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/hoodies"
                android:id="@+id/image_sponsor2"
                android:layout_width="114dp"
                android:layout_height="114dp"

                android:padding="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoodies"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main3"
        android:elevation="8dp"
        android:layout_toRightOf="@id/card_main2"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp"
        android:focusable="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lay3"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/notpad"
                android:id="@+id/image_sponsor3"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:padding="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaries"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main4"
        android:elevation="8dp"
        android:layout_below="@id/card_main2"
        android:layout_toRightOf="@+id/card_main"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lay4"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/pen"
                android:id="@+id/image_sponsor4"
                android:layout_width="114dp"
                android:layout_height="114dp"

                android:padding="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pens"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main5"
        android:elevation="8dp"
        android:clickable="true"

        android:layout_below="@id/card_main"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        app:cardElevation="6dp"
        android:focusable="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lay5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/badges"
                android:scaleType="centerCrop"
                android:id="@+id/image_sponsor5"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:padding="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Badges"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_main6"
        android:elevation="8dp"
        android:clickable="true"
android:layout_toRightOf="@id/card_main4"
        android:layout_below="@id/card_main"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp"
        android:focusable="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lay6"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_tshirt"
                android:id="@+id/image_sponsor6"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:padding="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/upper"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/head_name"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="Head's Name" />
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/type"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext"
            android:layout_margin="16dp"
          />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/head_cont"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText

android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="Head's Contact Number" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/head_email"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="Head's Email ID" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/city"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="City" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/no_pieces"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="Number of Pieces" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/others"
            app:counterTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
android:id="@+id/other_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:visibility="gone"
                android:background="@drawable/edittext"
                android:layout_margin="16dp"
                android:hint="Others" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="230dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_gradient_style"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:id="@+id/submit_btn"
            android:text="Submit"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>