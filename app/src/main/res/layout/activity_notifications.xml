<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Student.Notifications.Notifications">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">



        <TextView
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textStyle="bold"

            android:textColor="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Notifications"
            android:layout_marginBottom="16dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/no_new_notifications"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_notification"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No New Notifications"
            android:textSize="20sp"/>

    </LinearLayout>

    <com.example.socialdukan.Student.Notifications.Customised.BucketRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:id="@+id/noti_rv"/>
</RelativeLayout>