<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_card"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"

            android:id="@+id/icd_cmpimg_layout"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/icd_cmpimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:text="Apply by"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpname0"
            android:layout_marginRight="4dp"

   android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="08 Apr"


            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:id="@+id/date"
android:layout_marginBottom="20.5dp"
android:layout_toRightOf="@id/icd_cmpname0"
           android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="Classic"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:id="@+id/infl_name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:maxLines="1"
            android:textColor="#808080"
            android:fontFamily="@font/montserrat"
            android:id="@+id/categ_name"
            android:layout_marginRight="15dp"
            android:text="Gaming"
            android:textSize="20sp"
            android:layout_below="@+id/infl_name"
            android:layout_toRightOf="@+id/icd_cmpimg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView

            android:textColor="#808080"
            android:fontFamily="@font/montserrat"
            android:id="@+id/icd_cmpsubname1"

            android:text="|"
            android:textSize="22sp"
           android:layout_below="@id/infl_name"
            android:layout_toEndOf="@+id/categ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:textColor="#808080"
            android:fontFamily="@font/montserrat"
            android:id="@+id/location"
android:layout_marginLeft="12dp"
            android:text="Location"
            android:textSize="20sp"
            android:layout_below="@id/infl_name"
            android:layout_toEndOf="@+id/icd_cmpsubname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"

           android:layout_alignParentBottom="true"
android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"

                android:text="Details"
                android:id="@+id/detail_btn"
                android:textColor="#000"
                android:layout_margin="2dp"

                android:textAllCaps="false"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>