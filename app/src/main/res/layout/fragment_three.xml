<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Employe.Fragment.Fragment_three">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/main_layout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:elevation="6dp"
                android:layout_height="340dp"
                android:background="@drawable/bg_profile">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout_this"
                    android:background="@drawable/try_4"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_notification_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:elevation="6dp"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:src="@drawable/ic_notifications_blackone_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:fontFamily="@font/montserrat"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:id="@+id/profile"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/edit_profile"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"

                        android:background="@drawable/circle"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="50dp"
                        android:layout_toLeftOf="@+id/image_user"
                        android:src="@drawable/edit" />


                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="-187dp"
                        android:layout_toLeftOf="@+id/image_user"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/info" />

                  <ImageView
                        android:src="@drawable/user"
                        android:id="@+id/image_user"
                        android:layout_width="100dp"
                        android:layout_below="@id/profile"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"/>

                    <ProgressBar
                        android:id="@+id/pb_userimg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="156dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ritik Mehta"
                        android:textSize="16sp"
                        android:id="@+id/name_user"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_below="@id/image_user"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99643538169"
                        android:textSize="16sp"

                        android:id="@+id/user_ph"

                        android:drawablePadding="4dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/name_user"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rithikmehta@gmail.com"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:id="@+id/user_email"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/user_ph"
                        android:layout_centerHorizontal="true"
                        />


                </RelativeLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_below="@+id/layout_profile"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="512dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"

                        app:cardElevation="6dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/card1"
                        android:layout_margin="20dp"
                        android:elevation="8dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/purple"
                                android:fontFamily="@font/montserrat"
                                android:textSize="16sp"
                                android:id="@+id/descrip_text"
                                android:layout_height="wrap_content"
                                android:text="Hello"

                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:elevation="8dp"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="@color/lightpurple"

                        android:layout_centerHorizontal="true"
                        app:cardElevation="6dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:id="@+id/layout_signout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_margin="12dp"
                                android:textColor="@color/white"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:textSize="20sp"
                                android:text="Sign out"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </ScrollView>
        </RelativeLayout>

    </ScrollView>
</FrameLayout>